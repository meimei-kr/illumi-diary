<%= turbo_frame_tag comment do %>
  <div class="flex flex-col px-8 py-8 mb-2 bg-white rounded-lg md:w-2/3 w-full">
    <div class="avatar">
      <div class='w-10'>
        <%= image_tag comment.user.avatar_image_url, class:'rounded-full border border-zinc-200' %>
      </div>
      <p class="ml-1 leading-10 h-10 truncate max-w-xs text-sm"><%= comment.user.name %></p>
    </div>
    <div>
    <%= form_with model: comment, url: diary_comment_path(comment.diary, comment) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.text_area :content, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      <div class="flex flex-row justify-end mt-2">
        <%= link_to t('link.back'), diary_comment_path(comment.diary, comment), class: "cancel-button w-28 rounded-full py-1 px-4 inline-block text-center" %>
        <%= f.submit class: "primary-button w-28 rounded-full py-1 px-4 ml-2 inline-block" %>
      </div>
    <% end %>
  </div>
<% end %>