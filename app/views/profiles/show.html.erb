<%= content_for(:title, t('.title')) %>
<div class="flex flex-col grow items-center justify-center w-full h-full bg-pale-beige">
  <%= render 'shared/flash_message' %>
  <h1 class="text-2xl mb-4 text-center"><%= t('.title') %></h1>
  <div class="bg-white rounded-xl p-6 w-2/3">
    <div class="overflow-x-auto">
      <div class="flex flex-row justify-center items-center">
        <p class="mb-4">アカウント情報</p>
      </div>
      <table class="table">
        <tr></tr>
        <tr class="h-16">
          <th scope="row" class="text-left w-72"><%= User.human_attribute_name(:name) %></th>
          <td><%= current_user.name %></td>
        </tr>
        <tr class="h-16">
          <th scope="row" class="text-left w-72"><%= User.human_attribute_name(:email) %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr class="h-32">
          <th scope="row" class="text-left w-72"><%= User.human_attribute_name(:avatar_image) %></th>
          <td><%= image_tag current_user.avatar_image.thumb.url, class: 'rounded-full mt-2 object-cover border border-zinc-200', style: "width: 100px; height: 100px;" %></td>
        </tr>
        <tr class="h-32">
          <th scope="row" class="text-left w-72"><%= User.human_attribute_name(:character_image) %></th>
          <td><%= image_tag current_user.character_image.thumb.url, class: 'rounded-full mt-2 object-cover border border-zinc-200', style: "width: 100px; height: 100px;" %></td>
        </tr>
        <tr></tr>
      </table>
      <div class="flex flex-row justify-end">
        <%= link_to '変更', edit_profile_path, class: 'btn secondary-reverse-button mt-4' %>
      </div>
    </div>
  </div>
  <div class="bg-white rounded-xl p-6 mt-4 mb-16 w-2/3">
    <div class="overflow-x-auto">
      <div class="flex flex-row justify-center items-center">
        <p class="mb-4">パスワード</p>
      </div>
      <table class="table">
        <tr></tr>
        <tr class="h-16">
          <th scope="row" class="text-left w-72"><%= User.human_attribute_name(:password) %></th>
          <td>*** ( セキュリティのためパスワードは非表示となっています )</td>
        </tr>
        <tr></tr>
      </table>
      <div class="flex flex-row justify-end">
        <%= link_to '変更', edit_password_profile_path, class: 'btn secondary-reverse-button mt-4' %>
      </div>
    </div>
  </div>
</div>