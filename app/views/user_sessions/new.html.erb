<%= content_for(:title, t('.title')) %>
<div class="flex flex-col grow items-center justify-center w-full h-full bg-pale-beige">
  <div class="w-full max-w-md">
    <h1 class="text-2xl mb-4 text-center"><%= t('.title') %></h1>
    <%= form_with url: login_path, class: 'space-y-4' do |f| %>
      <div class="flex flex-col">
        <%= f.label :email, class: 'mb-2 ml-1' %>
        <%= f.text_field :email, class: 'p-2 border rounded input input-bordered w-full max-w-x' %>
      </div>
      <div class="flex flex-col">
        <%= f.label :password, class: 'mb-2 ml-1' %>
        <%= f.password_field :password, class: 'p-2 border rounded input input-bordered w-full max-w-x' %>
      </div>
      <p class="text-sm ml-1">パスワードをお忘れの方は、<%= link_to 'こちら', new_password_reset_path, class: 'text-terracotta link link-hover' %></p>
      <div class="flex flex-col">
        <%= f.submit t('.login'), class: 'primary-button mt-4 p-2 rounded-full' %>
      </div>
    <% end %>

    <h2 class="text-xl mt-10 ml-1"><%= t('.signup_title') %></h2>
    <div class="flex flex-col mb-20">
      <%= link_to t('.signup'), new_user_path, class: "primary-button mt-4 p-2 rounded-full text-center" %>
    </div>
  </div>
</div>