<%= content_for(:title, t('.title')) %>
<script src="https://accounts.google.com/gsi/client" async defer></script>
<div class="flex flex-col grow items-center justify-center w-full h-full bg-pale-beige">
  <div class="w-full max-w-md">
    <h1 class="text-2xl mb-4 text-center"><%= t('.title') %></h1>
    <%= form_with url: login_path, class: 'space-y-4', data: { turbo: false } do |f| %>
      <div class="flex flex-col">
        <%= f.label :email, class: 'mb-2 ml-1' %>
        <%= f.text_field :email, class: 'p-2 border rounded input input-bordered w-full max-w-x' %>
      </div>
      <div class="flex flex-col">
        <%= f.label :password, class: 'mb-2 ml-1' %>
        <%= f.password_field :password, class: 'p-2 border rounded input input-bordered w-full max-w-x' %>
      </div>
      <p class="text-sm ml-1">パスワードをお忘れの方は、<%= link_to 'こちら', new_password_reset_path, class: 'text-terracotta link link-hover' %></p>
      <div class="flex flex-col">
        <%= f.submit t('.login'), class: 'primary-button mt-4 p-2 rounded-full' %>
      </div>
    <% end %>
    <div class="flex justify-center mt-8">
      <p>または</p>
    </div>
    <div class="h-11 flex justify-center items-center mt-8">
      <%= link_to image_tag('google.png', class: 'h-full'), auth_at_provider_path(:google), class: 'h-full' %>
    </div>

    <div class="border border-gray-600 opacity-50 w-full my-20"></div>

    <h2 class="text-xl mt-10 ml-1 text-center"><%= t('.guest_login_title') %></h2>
    <%= button_to t('.guest_login'), guest_login_path, class: 'h-full w-full' ,form: { class: "primary-button mt-4 p-2 rounded-full text-center" }, data: { turbo: false }, method: :post %>
    <h2 class="text-xl mt-10 ml-1 text-center"><%= t('.signup_title') %></h2>
    <div class="flex flex-col mb-40">
      <%= link_to t('.signup'), new_user_path, class: "primary-button mt-4 p-2 rounded-full text-center" %>
    </div>
  </div>
</div>