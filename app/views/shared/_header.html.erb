<header class="bg-pale-beige">
  <nav class="flex justify-between items-center px-14 h-16">
    <div class="h-16 flex items-center">
      <%= link_to root_path do %>
        <%= image_tag "logo.png", class:"w-25 h-10" %>
      <% end %>
    </div>

    <div class="flex items-center h-16">
      <% color = current_user.decorate.medal_color %>
      <% unless color.nil? %>
        <div class="flex-none">
          <i class="fa-solid fa-medal fa-xl" style="color: <%= color %>"></i>
        </div>
      <% end %>
      <div class="flex flex-1 ml-2.5 avatar">
        <div class='w-10'>
          <%= image_tag current_user.avatar_image.avatar.url, class:'rounded-full' %>
        </div>
        <p class="ml-1 leading-10 h-10 truncate max-w-xs text-sm"><%= current_user.name %></p>
      </div>

      <div class="flex-none dropdown dropdown-end ml-3">
        <button class="btn btn-square btn-ghost">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-5 h-5 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
        </button>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
          <li class="flex-none ml-1.5">
            <%= link_to t('header.diaries'), diaries_path, class: 'cursor-pointer' %>
          </li>
          <li class="flex-none ml-1.5">
            <%= link_to t('header.new_diary'), new_diary_path, class: 'cursor-pointer' %>
          </li>
          <li class="flex-none ml-1.5">
            <%= link_to t('header.my_diaries'), my_diaries_diaries_path, class: 'cursor-pointer' %>
          </li>
          <li class="flex-none ml-1.5">
            <%= link_to t('header.profile'), profile_path, class: 'cursor-pointer' %>
          </li>
          <li class="flex-none ml-1.5">
            <%= link_to t('header.logout'), logout_path, data: { turbo_method: :delete }, class: 'cursor-pointer' %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>