<%= turbo_stream.append 'diaries' do %>
  <% if @diaries.present? %>
    <%= render @diaries %>
  <% else %>
    <%= render 'diaries/no_diaries' %>
  <% end %>
<% end %>

<% if @next_page.present? %>
  <%= turbo_stream.replace 'load_more' do %>
    <%= turbo_frame_tag 'load_more', src: my_diaries_diaries_path(page: @next_page, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% end %>