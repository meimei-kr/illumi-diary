<%= content_for(:title, t('.title')) %>
<div class="flex flex-col grow bg-pale-beige items-center justify-center w-full h-full px-4">
  <div class="flex flex-row justify-center items-center sm:mt-10 mt-5">
    <h1 class="sm:text-2xl text-lg text-center inline tracking-wider"><%= t('.title') %></h1>
    <%= image_tag 'diary.png', class: 'sm:h-24 h-14 sm:w-24 h-14 bg-cover' %>
  </div>

  <div class="container mx-auto mt-2 sm:mb-24 mb-12">
    <div id="diary">
      <%= render @diary %>
    </div>

    <% if @diary.allow_comments %>
      <%= render 'comments/form', comment: @comment, diary: @diary %>

      <div class="flex flex-col justify-center items-center mt-5" id="comments">
        <%= render @comments %>
      </div>
    <% end %>

    <div class="flex flex-row justify-end sm:mt-24 mt-12">
      <div>
        <%= link_to t('link.to_diaries'), diaries_path, class: 'text-terracotta sm:text-base text-sm link md:link-hover' %>
        <%= link_to t('link.to_my_diaries'), my_diaries_diaries_path, class: 'text-terracotta sm:text-base text-sm link md:link-hover ml-4' %>
      </div>
    </div>
  </div>
</div>
