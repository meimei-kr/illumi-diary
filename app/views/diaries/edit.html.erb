<%= content_for(:title, t('.title')) %>
<div class="flex flex-col grow bg-pale-beige items-center justify-center w-full h-full px-4">
  <div class="flex flex-row justify-center">
    <h1 class="text-2xl mt-10 text-center inline tracking-wider">日記編集</h1>
    <%= image_tag 'diary.png', class: 'h-24 w-24 bg-cover' %>
  </div>

  <div class="container mx-auto mt-2 mb-24">
    <%= render "form", diary: @diary %>
    <div class="flex flex-row justify-end mt-24 w-full">
      <div>
        <%= link_to t('link.show_diary'), @diary, class: "text-terracotta link link-hover" %>
      </div>
    </div>
  </div>
</div>
