<%= content_for(:title, t('.title')) %>
<% title "みんなの日記ページ" %>
<div class="flex flex-col grow bg-pale-beige w-full h-full justify-stretch px-4">
  <div class="flex flex-row justify-center items-center sm:mt-10 mt-5">
    <h1 class="sm:text-2xl text-lg text-center inline tracking-wider"><%= t('.title') %></h1>
    <%= image_tag 'diary.png', class: 'sm:h-24 h-14 sm:w-24 h-14 bg-cover' %>
  </div>

  <div class="container mx-auto sm:mt-2 mt-0 mb-24">
    <div class="flex sm:justify-end justify-center items-center sm:mb-6 mb-3 mx-auto">
      <div class="flex flex-row justify-center items-center p-2 primary-button rounded-full w-48">
        <%= link_to new_diary_path, class: 'h-full w-full flex justify-center items-center' do %>
          <span class="text-white">
            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path fill="white" d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c17.7 0 32-14.3 32-32s-14.3-32-32-32H256V80z"/></svg>
          </span>
          <span class="ml-2"><%= t('link.create_diary') %></span>
        <% end %>
      </div>
    </div>
    <div>
      <% if @diaries.present? %>
        <div id="diaries">
        </div>
        <%= turbo_frame_tag 'load_more', src: diaries_path(format: :turbo_stream), loading: :lazy %>
      <% else %>
        <%= render 'diaries/no_diaries' %>
      <% end %>
    </div>
  </div>
</div>